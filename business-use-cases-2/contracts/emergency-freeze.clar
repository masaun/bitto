(define-map emergency_freeze_registry uint {creator: principal, data: (string-ascii 256), timestamp: uint})
(define-data-var emergency_freeze_nonce uint u0)
(define-read-only (get-entry (id uint)) (map-get? emergency_freeze_registry id))
(define-public (register (data (string-ascii 256)))
  (let ((id (+ (var-get emergency_freeze_nonce) u1)))
    (map-set emergency_freeze_registry id {creator: tx-sender, data: data, timestamp: stacks-block-height})
    (var-set emergency_freeze_nonce id)
    (ok id)))
(define-public (update-entry (id uint) (data (string-ascii 256)))
  (let ((entry (unwrap! (map-get? emergency_freeze_registry id) (err u1))))
    (asserts! (is-eq tx-sender (get creator entry)) (err u2))
    (map-set emergency_freeze_registry id (merge entry {data: data}))
    (ok true)))
