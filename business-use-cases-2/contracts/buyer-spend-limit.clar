(define-map buyer_spend_limit_registry uint {creator: principal, data: (string-ascii 256), timestamp: uint})
(define-data-var buyer_spend_limit_nonce uint u0)
(define-read-only (get-entry (id uint)) (map-get? buyer_spend_limit_registry id))
(define-public (register (data (string-ascii 256)))
  (let ((id (+ (var-get buyer_spend_limit_nonce) u1)))
    (map-set buyer_spend_limit_registry id {creator: tx-sender, data: data, timestamp: stacks-block-height})
    (var-set buyer_spend_limit_nonce id)
    (ok id)))
(define-public (update-entry (id uint) (data (string-ascii 256)))
  (let ((entry (unwrap! (map-get? buyer_spend_limit_registry id) (err u1))))
    (asserts! (is-eq tx-sender (get creator entry)) (err u2))
    (map-set buyer_spend_limit_registry id (merge entry {data: data}))
    (ok true)))
